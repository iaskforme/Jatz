<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:backgroundTint="#f8f9ff"
                                   android:layout_margin="5dp"
                                   android:layout_marginBottom="8dp"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/lineOne"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Line 1"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" android:layout_alignParentEnd="true" android:layout_marginEnd="306dp"
                android:layout_marginTop="6dp" android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/lineTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 2"
                android:textSize="10dp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentTop="true" android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>